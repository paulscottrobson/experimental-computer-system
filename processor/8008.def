//	@r 		ABCDEHLM on (opcode / step mod 8)
//	@hl		HL converted to 14 bit address
//	@read 	Read $MAR -> $MBR
//	@write 	Write $MBR to $MAR
//	@fetch 	Fetch to $MBR
//	@add 	calculate $MBR,$CARRY = $A + $MBR + $CARRY (uses $MAR)
//
// *************************************************************************************************
//									Index Register Instructions
// *************************************************************************************************

C0-C6 	5	"mov a,@r"
	$a = $@r

C8-CE 	5	"mov b,@r"
	$b = $@r

D0-D6 	5	"mov c,@r"
	$c = $@r

D8-DE 	5	"mov d,@r"
	$d = $@r

E0-E6 	5	"mov e,@r"
	$e = $@r

E8-EE 	5	"mov h,@r"
	$h = $@r

F0-F6 	5	"mov l,@r"
	$l = $@r

C7-F7,8	8 	"mov @r,m"
	$mar = @hl
	@read
	$@r = $mbr

F8-FE	7 	"mov m,@r"
	$mar = @hl
	$mbr = $@r
	@write

06-36,8 8 	"mvi @r,#%1"	
	@fetch
	$@r = $mbr

3E		9 	"mvi m,#%1"
	@fetch
	$mar = @hl
	@write

08-30,8	5 	"inr @r"
	$@r = ($@r + 1) & 0xFF
	$pszv = $@r

09-31,8	5 	"dcr @r"
	$@r = ($@r + 0xFF) & 0xFF
	$pszv = $@r

// *************************************************************************************************
//								Accumulator Group Instructions
// *************************************************************************************************

80-86 	5 	"add @r"
	$carry = 0
	$mbr = $r
	@add
	$a = $mbr ; $pszv = $mbr

87 		8 	"add m"
	$carry = 0
	$mar = @hl
	@read
	@add
	$a = $mbr ; $pszv = $mbr

04 		8 	"adi #%1"
	$carry = 0
	@fetch
	@add
	$a = $mbr ; $pszv = $mbr

// ----------------------------------------------------------------------------------------------------------

88-8E 	5 	"adc @r"
	$mbr = $r
	@add
	$a = $mbr ; $pszv = $mbr

8F 		8 	"adc m"
	$mar = @hl
	@read
	@add
	$a = $mbr ; $pszv = $mbr

0C 		8 	"aci #%1"
	$carry = 0
	@fetch
	@add
	$a = $mbr ; $pszv = $mbr

// ----------------------------------------------------------------------------------------------------------

90-96 	5 	"sub @r"
	$carry = 1
	$mbr = $r ^ 0xFF
	@add
	$a = $mbr ; $pszv = $mbr

87 		8 	"sub m"
	$carry = 1
	$mar = @hl
	@read
	$mbr = $mbr ^ 0xFF
	@add
	$a = $mbr ; $pszv = $mbr

14 		8 	"sui #%1"
	$carry = 1
	@fetch
	@add
	$mbr = $mbr ^ 0xFF
	$a = $mbr ; $pszv = $mbr

// ----------------------------------------------------------------------------------------------------------

98-9E 	5 	"sbb @r"
	$mbr = $r ^ 0xFF
	@add
	$a = $mbr ; $pszv = $mbr

9F 		8 	"sbb m"
	$mar = @hl
	@read
	$mbr = $mbr ^ 0xFF
	@add
	$a = $mbr ; $pszv = $mbr

1C 		8 	"sbi #%1"
	@fetch
	@add
	$mbr = $mbr ^ 0xFF
	$a = $mbr ; $pszv = $mbr

// ----------------------------------------------------------------------------------------------------------

A0-A6 	5 	"and @r"
	$carry = 0	
	$a = $a & $@r ; $pszv = $a

A7 		8 	"and m"
	$carry = 0
	$mar = @hl
	@read
	$a = $a & $mbr ; $pszv = $a

24 		8 	"ani #%1"
	$carry = 0
	@fetch
	$a = $a & $mbr ; $pszv = $a

// ----------------------------------------------------------------------------------------------------------

A8-AE 	5 	"xor @r"
	$carry = 0	
	$a = $a ^ $@r ; $pszv = $a

AF 		8 	"xor m"
	$carry = 0
	$mar = @hl
	@read
	$a = $a ^ $mbr ; $pszv = $a

2C 		8 	"xri #%1"
	$carry = 0
	@fetch
	$a = $a ^ $mbr ; $pszv = $a

// ----------------------------------------------------------------------------------------------------------

B0-B6 	5 	"or @r"
	$carry = 0	
	$a = $a | $@r ; $pszv = $a

B7 		8 	"or m"
	$carry = 0
	$mar = @hl
	@read
	$a = $a | $mbr ; $pszv = $a

34 		8 	"ori #%1"
	$carry = 0
	@fetch
	$a = $a | $mbr ; $pszv = $a

// ----------------------------------------------------------------------------------------------------------

B8-BE 	5 	"cmp @r"
	$carry = 1
	$mbr = $r ^ 0xFF
	@add
	$pszv = $mbr

BF 		8 	"cmp m"
	$carry = 1
	$mar = @hl
	@read
	$mbr = $mbr ^ 0xFF
	@add
	$pszv = $mbr

3C 		8 	"cpi #%1"
	$carry = 1
	@fetch
	@add
	$mbr = $mbr ^ 0xFF
	$pszv = $mbr

// ----------------------------------------------------------------------------------------------------------


02 		5 	"rlc"
	$a = (($a << 1) | ($a >> 7)) & 0xFF
	$carry = $a & 1

0A 		5 	"rrc"
	$carry = $a & 1
	$a = ($a >> 1) | ($carry << 7)

12 		5 	"ral"
	$mar = ($a << 1) | $carry
	$a = $mar & 0xFF
	$carry = ($mar >> 8) & 1

1A 		5 	"rar"
	$mar = $a | ($carry << 8)
	$a = ($mar >> 1) & 0xFF
	$carry = $mar & 1

